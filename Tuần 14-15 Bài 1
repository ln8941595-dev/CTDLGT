#include <iostream>
using namespace std;

struct Node {
    int val;
    Node *left, *right;
    Node(int v) : val(v), left(nullptr), right(nullptr) {}
};

// Duyệt cây
void preorder(Node* r) {
    if (!r) return;
    cout << r->val << " ";
    preorder(r->left);
    preorder(r->right);
}

void inorder(Node* r) {
    if (!r) return;
    inorder(r->left);
    cout << r->val << " ";
    inorder(r->right);
}

void postorder(Node* r) {
    if (!r) return;
    postorder(r->left);
    postorder(r->right);
    cout << r->val << " ";
}

// Vun đống (max-heap)
void heapify(Node* r) {
    if (!r) return;
    Node* largest = r;

    if (r->left && r->left->val > largest->val) largest = r->left;
    if (r->right && r->right->val > largest->val) largest = r->right;

    if (largest != r) {
        swap(r->val, largest->val);
        heapify(largest);
    }
}

int main() {
    Node* root = new Node(4);
    root->left = new Node(1);
    root->right = new Node(3);
    root->left->left = new Node(2);
    root->left->right = new Node(16);
    root->right->left = new Node(9);
    root->right->right = new Node(10);

    cout << "Preorder: "; preorder(root); cout << endl;
    cout << "Inorder: "; inorder(root); cout << endl;
    cout << "Postorder: "; postorder(root); cout << endl;

    heapify(root);
    cout << "Sau khi vun dong (Preorder): ";
    preorder(root);

    return 0;
}
